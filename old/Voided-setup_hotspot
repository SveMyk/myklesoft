#!/bin/bash

echo "ðŸ›  Oppdaterer systemet..."
sudo apt update && sudo apt upgrade -y

echo "ðŸ“¦ Installerer nÃ¸dvendige pakker..."
sudo apt install -y dnsmasq hostapd

echo "ðŸ”§ Deaktiverer wpa_supplicant..."
sudo systemctl stop wpa_supplicant
sudo systemctl disable wpa_supplicant

echo "ðŸŒ Konfigurerer statisk IP..."
sudo bash -c 'cat >> /etc/dhcpcd.conf << EOF
interface wlan0
static ip_address=192.168.4.1/24
nohook wpa_supplicant
EOF'

echo "ðŸ“¡ Setter opp DHCP-server..."
sudo bash -c 'cat > /etc/dnsmasq.conf << EOF
interface=wlan0
dhcp-range=192.168.4.10,192.168.4.100,255.255.255.0,24h
EOF'

echo "ðŸ“¡ Konfigurerer hotspot..."
sudo bash -c 'cat > /etc/hostapd/hostapd.conf << EOF
interface=wlan0
ssid=GASSO
hw_mode=g
channel=7
wmm_enabled=0
macaddr_acl=0
auth_algs=1
ignore_broadcast_ssid=0
wpa=2
wpa_passphrase=robotino123
wpa_key_mgmt=WPA-PSK
rsn_pairwise=CCMP
EOF'

echo "ðŸ“Œ Setter opp hostapd-konfig..."
sudo sed -i 's|#DAEMON_CONF=""|DAEMON_CONF="/etc/hostapd/hostapd.conf"|' /etc/default/hostapd

echo "ðŸš€ Starter hotspot..."
sudo systemctl unmask hostapd
sudo systemctl enable hostapd
sudo systemctl restart hostapd
sudo systemctl restart dnsmasq

echo "âœ… Hotspot er satt opp! Nettverk: GASSO | Passord: robotino123"
