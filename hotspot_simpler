# 1️⃣ Oppdater og installer nødvendige pakker
sudo apt update
sudo apt install -y hostapd dnsmasq

# 2️⃣ Deaktiver DHCP for WiFi
sudo systemctl stop dhcpcd
sudo systemctl disable dhcpcd

# 3️⃣ Sett opp statisk IP for wlan0
echo -e "\ninterface wlan0\nstatic ip_address=192.168.4.1/24" | sudo tee -a /etc/dhcpcd.conf

# 4️⃣ Konfigurer DHCP-serveren (dnsmasq)
sudo tee /etc/dnsmasq.conf > /dev/null <<EOL
interface=wlan0
dhcp-range=192.168.4.2,192.168.4.20,255.255.255.0,24h
EOL

# 5️⃣ Konfigurer WiFi-hotspot (hostapd)
sudo tee /etc/hostapd/hostapd.conf > /dev/null <<EOL
interface=wlan0
driver=nl80211
ssid=GASSO
hw_mode=g
channel=7
wmm_enabled=0
macaddr_acl=0
auth_algs=1
ignore_broadcast_ssid=0
wpa=2
wpa_passphrase=robotino123
wpa_key_mgmt=WPA-PSK
rsn_pairwise=CCMP
EOL

# 6️⃣ Koble hostapd til konfigurasjonen
sudo sed -i 's|#DAEMON_CONF=""|DAEMON_CONF="/etc/hostapd/hostapd.conf"|' /etc/default/hostapd

# 7️⃣ Aktiver og start tjenestene
sudo systemctl unmask hostapd
sudo systemctl enable hostapd
sudo systemctl restart hostapd
sudo systemctl restart dnsmasq

# 8️⃣ Start Raspberry Pi på nytt
sudo reboot
